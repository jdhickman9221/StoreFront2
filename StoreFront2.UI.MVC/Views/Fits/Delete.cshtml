@model StoreFront2.DATA.EF.Fit

@{
    ViewBag.Title = "Delete Size";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete @Model.FitName?</h3>
<div>
    <h4>Fit</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FitName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FitName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger pull-right" /> |
            @Html.ActionLink("Cancel", "Index", null, new {@class = "pull-left btn btn-dark"})
        </div>
    }
</div>
