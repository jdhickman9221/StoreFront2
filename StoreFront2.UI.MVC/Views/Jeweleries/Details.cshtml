    @* Shopping Cart Step 2. *@
    @* This is where we create the button that adds an item with a certain QTY to the shopping cart. *@
    <p>
        @* Html.BeginForm("action", "controller", route values, FormMethod, htmlattributes)*@
        @using (Html.BeginForm("AddToCart", "Jeweleries", new { @productID = Model.ProductID }, FormMethod.Post, new { @class = "text-center" }
        ))
        {
            @Html.HiddenFor(x => x.ProductID)
            <span class="label">Quantity:</span>
            @Html.TextBox("Qty", 1, new {@class="form-control", style="max-width: 50px; display: inline;" })
